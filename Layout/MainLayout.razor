@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager

<MudThemeProvider Theme="_pipBoyTheme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Fixed="true" Style="border-bottom: 2px solid #39ff14; background-color: rgba(13, 13, 13, 0.9);">

        <MudSpacer />
        @*상단 메뉴 버튼*@
        <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
            <MudStack Row="true" Spacing="4" AlignItems="AlignItems.Center">
                <MudButton OnClick="GoToHome" Color="Color.Primary" Variant="Variant.Text" Style="font-weight:bold;">HOME</MudButton>

                <MudButton Href="/portfolios" Color="Color.Primary" Variant="Variant.Text" Style="font-weight:bold;">PORTFOLIOS</MudButton>
                <MudButton Href="/convention" Color="Color.Primary" Variant="Variant.Text" Style="font-weight:bold;">CONVENTION</MudButton>
                <MudButton Href="https://github.com/ReltyWorks/TechJournal" Target="_blank" Color="Color.Primary" Variant="Variant.Text" Style="font-weight:bold;">GITHUB</MudButton>

                <MudButton OnClick="GoToContact" Color="Color.Primary" Variant="Variant.Text" Style="font-weight:bold;">CONTACT</MudButton>
            </MudStack>
        </MudHidden>

        <MudSpacer />

        <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.End" OnClick="@((e) => DrawerToggle())" />
        </MudHidden>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Anchor="Anchor.Right" Elevation="1" Variant="DrawerVariant.Temporary" Style="border-left: 1px solid #39ff14;">
        <MudNavMenu>
            @*햄버거 메뉴 버튼*@
            <MudNavLink OnClick="@(async () => { DrawerToggle(); await GoToHome(); })" Icon="@Icons.Material.Filled.Home" IconColor="Color.Primary">HOME</MudNavLink>

            <MudNavLink Href="/portfolios" Icon="@Icons.Material.Filled.ViewModule" IconColor="Color.Primary">PORTFOLIOS</MudNavLink>
            <MudNavLink Href="/convention" Icon="@Icons.Material.Filled.Description" IconColor="Color.Primary">CONVENTION</MudNavLink>
            <MudNavLink Href="https://github.com/ReltyWorks/TechJournal" Target="_blank" Icon="@Icons.Custom.Brands.GitHub" IconColor="Color.Primary">GITHUB</MudNavLink>

            <MudNavLink OnClick="@(async () => { DrawerToggle(); await GoToContact(); })" Icon="@Icons.Material.Filled.Email" IconColor="Color.Primary">CONTACT</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent Style="padding-top: 80px;">
        <MudContainer MaxWidth="MaxWidth.Large" Style="min-height: 100vh; display: flex; flex-direction: column;">
            @Body
            <div style="height: 50px;"></div>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;
    void DrawerToggle() => _drawerOpen = !_drawerOpen;

    // 홈으로 가거나, 이미 홈이면 맨 위로 올리기
    private async Task GoToHome()
    {
        // 현재 주소가 홈("/")인지 확인 (BaseUri와 비교)
        // 이미 홈이면 -> 부드럽게 맨 위로 스크롤
        if (NavManager.Uri == NavManager.BaseUri)
            await JSRuntime.InvokeVoidAsync("window.scrollTo", new { top = 0, behavior = "smooth" });
        else
            NavManager.NavigateTo("/"); // 다른 곳이면 -> 홈으로 이동 (이동하면 자동으로 맨 위임)
    }

    // 화면 맨 아래로 스크롤 (똑똑한 버전)
    private async Task GoToContact()
    {
        // 1. 현재 홈(BaseUri)이 아닌지 확인
        if (NavManager.Uri != NavManager.BaseUri)
        {
            // 홈이 아니면 일단 홈으로 이동
            NavManager.NavigateTo("/");

            // 페이지가 바뀌고 화면이 그려질 때까지 0.3초(300ms)만 기다려줌.
            await Task.Delay(300);
        }

        // 2. 홈으로 왔거나 원래 홈이었으니, 이제 맨 아래로 스크롤
        await JSRuntime.InvokeVoidAsync("window.scrollTo", new { top = 100000, behavior = "smooth" });
    }

    private MudTheme _pipBoyTheme = new MudTheme();

    protected override void OnInitialized()
    {
        _pipBoyTheme.PaletteDark.Primary = "#39ff14";
        _pipBoyTheme.PaletteDark.Background = "#0d0d0d";
        _pipBoyTheme.PaletteDark.Surface = "#1a1a1a";
        _pipBoyTheme.PaletteDark.AppbarBackground = "#0d0d0d";
        _pipBoyTheme.PaletteDark.TextPrimary = "#e0e0e0";
    }
}